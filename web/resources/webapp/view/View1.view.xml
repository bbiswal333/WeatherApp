			            <sap.ui.comp.smartfield:SmartLabel xmlns:sap.ui.comp.smartfield="sap.ui.comp.smartfield" width="100%" id="desc_label" textAlign="Center"/>
			            <sap.ui.comp.smartfield:SmartLabel xmlns:sap.ui.comp.smartfield="sap.ui.comp.smartfield" width="100%" id="temp_label" textAlign="Center"/>
